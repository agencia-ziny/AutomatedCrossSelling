<layout version="1.0.6">
    <default>
        <reference name="head">
            <action method="addItem" ifconfig="catalog/comproutambem/estilos">
                <type>skin_css</type>
                <name>ziny/comproutambem/css/geral.css</name>
            </action>
        </reference>
    </default>
    <catalog_product_view>	
        <reference name="product.info.additional">
            <block type="ziny_comproutambem/comproutambem" name="comproutambem" template="ziny/comproutambem/comproutambem.phtml" before="product.attributes">
                <action method="setColumnCount">
                    <columns>4</columns>
                </action>
            </block>    
        </reference>
    </catalog_product_view>
</layout>