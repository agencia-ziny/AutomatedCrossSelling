<config>
    <tabs>
       <ziny translate="label">
            <label>Ziny Extensions</label>
            <sort_order>202</sort_order>
        </ziny>
    </tabs>
    <sections>
        <catalog translate="label" module="comproutambem">
            <label>Automated Cross Selling</label>
            <tab>ziny</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <comproutambem translate="label">
                    <label>Automated Cross Selling</label>
                    <sort_order>9999</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <ativo translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ativo>
                        <estilos translate="label comment">
                            <label>Active Style</label>
                            <comment>Enable this option only if the module layout does not work in your store.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </estilos>                        
                        <titulo translate="label">
                            <label>Label Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </titulo>                        
                        <colunas translate="label">
                            <label>Number of Products</label>  
                            <frontend_type>text</frontend_type>                          
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </colunas>
                        <visibilidade translate="label">
                            <label>Products Visibility</label>
                            <comment>Use this option to filter the display of products.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>Ziny_ComprouTambem_Model_Config_Visao</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </visibilidade>
                        <preco translate="label">
                            <label>Display Price</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </preco>
                        <desejos translate="label">
                            <label>Display Wishlist Link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </desejos>
                        <compara translate="label">
                            <label>Display Compare Link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </compara>
                    </fields>
                </comproutambem>
            </groups>
        </catalog>
    </sections>  
</config>
